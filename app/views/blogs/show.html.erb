<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="thumbnail">
        <!--<img src="http://dummyimage.com/800x100/eee/fff"-->
             <!--alt="...">-->

        <div class="caption">
          <h3><a href="<%= @blog.url %>" target="_blank"><%= @blog.name %></a></h3>

          <p><%= @blog.blog_description %></p>
          <ul class="list-inline">
            <% @tags.each do |tag| %>
            <li>
              <a href="#" class="btn btn-default btn-xs"><%= tag.name %></a>
            </li>
            <% end %>
          </ul>
          <p class="text-right"><a href="#" class="btn btn-success" role="button">+ このブログをフィード</a></p>
        </div>
      </div>
    </div>
  </div>
  <ul class="media-list col-md-8 col-md-offset-2">
    <% @articles.each do |article| %>
    <li class="media">
      <h4><small><%= article.published.strftime("%Y/%m/%d") %></small></h4>
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="http://dummyimage.com/200x100/EEE/fff" alt="...">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><a href="<%= article.url %>" target="_blank"><%= truncate(article.name) %></a></h4>
        <blockquote>
          <p><%= truncate(article.article_description, length: 100) %></p>
        </blockquote>
      </div>
    </li>
    <% end %>
  </ul>

</div>
</div>
