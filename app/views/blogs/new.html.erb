<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">ブログ登録</h3>
    </div>
    <div class="panel-body">


      <!--<form action="/blogs" method="post">-->
      <%= form_for(@blog) do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= f.text_field :name, class: 'form-control', placeholder: 'ブログ名' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= f.text_field :url, class: 'form-control', placeholder: 'URL' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= f.text_field :feed, class: 'form-control', placeholder: 'RSS' %>
            </div>
          </div>
        </div>
        <!--<div class="form-group">-->
          <!--<div class="row">-->
            <!--<div class="col-md-6">-->
              <!--<input type="email" class="form-control" placeholder="メールアドレス">-->
            <!--</div>-->
          <!--</div>-->
        <!--</div>-->
        <div class="form-group">
          <div class="row">
            <div class="col-md-2">
              <%= f.text_field :feed, class: 'form-control', id: 'tag-autocomplite', placeholder: 'タグを追加' %>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <%= f.submit '送信', class: 'btn btn-success'%>
        </div>
        <% end %>
      <!--</form>-->
    </div>
  </div>
</div>
